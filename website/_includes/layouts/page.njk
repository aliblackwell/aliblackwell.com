<!DOCTYPE html>
<html lang="{{language}}" dir="{{dir}}">
  <head>
    {% include 'partials/head-default.njk' %}
    {% include 'partials/meta-tags-default.njk' %}
  </head>
  <body class="dark {{title | slug }} menu-{{options.menuStyle}} ">
    <a class="skip-link" href="#primary">Skip to content</a>
    <header class="nav-container {{options.navStyle}} logo-{{options.logoAlign}} {% if options.menuStyle == 'burger' %} show-burger-{{options.showBurger}} {% endif %}">
      <div class="contain-content-all">
        <h1 class="logo-container" id="site-logo">
          <a href="/">
            {# <span class="r">r</span><span class="g">g</span><span class="b">b</span> #}
            Alasdair.
          </a>
        </h1>

        {% include 'navigation-components/main-nav.njk' %}
      </div>
    </header>
    <main id="primary" class="container">
      {% if hasContents == true %}
        {% include 'navigation-components/contents-nav.njk' %}
      {% endif %}

      {% if showTitle == true %}
        <header class="content {{options.headerStyle}}">
          <div class="contain-content-text">

            <h1 id="page-title">{{title}}</h1>

          </div>

        </header>
      {% endif %}

      {% for content in dynamicContent %}

        {% if content.type == 'aboutNav' %}
          {% include 'navigation-components/contents-nav.njk' %}
        {% endif %}

        {% if content.type == 'textCTAs'%}
          <section class="{{content.bg}} text-ctas two-up">
            <div class="contain-content-all">
              {% for item in content.ctaItems %}
                <article>
                  <h2>{{item.title}}</h2>
                  <p>{{item.blurb}}</p>
                  {% if item.label %}
                    <a class="button" href="{{item.url}}">{{item.label}}</a>
                  {% endif %}
                </article>
              {% endfor %}
            </div>
          </section>
        {% endif %}

        {% if content.type == 'freeContent'%}
          <section class="{{content.bg}} content no-flex">
            <div class="contain-content-text">
              {{ content.content | markdownify | safe }}
            </div>
          </section>
        {% endif %}

        {% if content.type == 'gallery' %}
          <section class="{{content.bg}} gallery">
            <div class="contain-content-all">
              {% for item in content.galleryItems %}
                <article>
                  <figure>
                    <img src="{{item.image}}" alt="{{item.alt}}"/>
                    <figcaption>{{ item.caption }}</figcaption>
                  </figure>
                </article>
              {% endfor %}
            </div>
          </section>
        {% endif %}

        {% if content.type == 'testimonial' %}
          <section class="{{content.bg}} testimonial">
            <div class="contain-content-text">
              {% testimonial content.testimonial,
              content.author %}
            </div>
          </section>
        {% endif %}

        {% if content.type == 'sharer' %}
          <section class="{{content.bg}} sharer">
            <div class="contain-content-all">
              {% include 'partials/sharer.njk' %}
            </div>
          </section>
        {% endif %}

        {% if content.type == 'textWithImage' %}
          <section class="{{content.bg}} text-with-image group">
            <div class="contain-content-text">
              <header>
                <p>{{content.firstPara}}</p>
              </header>
              <div class="grid">
                <figure>
                  <img src="{{content.image}}" alt="{{content.alt}}"/>
                </figure>
                <article>
                  {{ content.content | markdownify | safe }}
                </article>
              </div>
            </div>
          </section>
        {% endif %}

        {% if content.type == 'mainBlurb' %}
          <section class="{{content.bg}} form">
            <div class="contain-content-text">
              <p class="main-blurb">I offer a
                <a href="/wonder-workshop" class="custom-underline inline">website design and development service</a>
                with a focus on
                <strong>usability</strong>,
                <strong>accessibility</strong>
                and
                <strong>privacy</strong>, as well as a
                <a href="/services" class="custom-underline">broader consultancy service</a>
                covering
                <strong>crypto / socioeconomics</strong>,
                <strong>ethics</strong>,
                <strong>artificial intelligence</strong>
                and everything in between.</p>
            </div>
          </section>
        {% endif %}

        {% if content.type == 'form' %}
          <section class="{{content.bg}} form" id="{{content.formId}}-wrapper">
            <aside class="loading hidden" id="{{content.formId}}-loading" aria-hidden="true">
              <div class="spinner">
                <div class="double-bounce1"></div>
                <div class="double-bounce2"></div>
              </div>
              Loading</aside>
            <div class="contain-content-text">
              <article class="success-message hidden" id="{{content.formId}}-success" aria-hidden="true">
                <p>{{content.formSuccessMessage}}</p>
              </article>
              <article class="error-messages hidden" id="{{content.formId}}-errors" aria-hidden="true">
                <h2>Unable to submit the form</h2>
                <p>Please check the following fields:</p>
                <ul id="{{content.formId}}-error-list"></ul>
              </article>
              <article class="error-messages hidden" id="{{content.formId}}-connection-error" aria-hidden="true">
                <p>There is a problem with the connection. Please check your internet and try again.</p>
              </article>
              {% form content,
              content.fields %}
              </div>
            </section>
          {% endif %}

          {% if content.type == 'cardsList' %}
            <section class="{{content.bg}} cards {{content.layout}}">
              <div class="contain-content-text">
                {% if content.title %}
                  <header>
                    <h1>{{content.title}}</h1>
                  </header>
                  {%endif%}
                  {% for card in content.cards %}
                    <article class="card">
                      <figure class="img">
                        {% if card.svg %}
                          {% include 'undraw-illustrations/'+card.svg+'.svg' %}
                        {% endif %}
                        {% if card.img %}
                          <img src="{{card.img}}" alt="{{card.alt}}"/>
                        {% endif %}
                      </figure>
                      <div class="text">
                        <h2>{{card.title}}</h2>
                        <p>{{card.text}}</p>
                        {% if card.label %}
                          <a href="{{card.url}}">{{card.label}}
                            â†’</a>
                        {% endif %}
                      </div>
                    </article>
                  {% endfor %}
                </div>
              </section>
            {% endif %}
          {% endfor %}

        </main>

        {% include 'partials/footer.njk' %}

        {% include 'partials/global-js.njk' %}
        {% for content in dynamicContent %}
          {% if content.type == 'sharer' %}
            <script src="/js/sharer.js"></script>
          {% endif %}
        {% endfor %}

        {% if permalink == '/' %}
          <script>
            if (window.netlifyIdentity) {
              window
                .netlifyIdentity
                .on("init", user => {
                  if (!user) {
                    window
                      .netlifyIdentity
                      .on("login", () => {
                        document.location.href = "/admin/";
                      });
                  }
                });
            }
          </script>
        {% endif %}

      </body>
    </html>